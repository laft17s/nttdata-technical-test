version: '3.8'

services:
  # =====================================================
  # PostgreSQL Database
  # =====================================================
  postgres:
    image: postgres:16-alpine
    container_name: nttdata-postgres
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: [TU_PASSWORD]
      POSTGRES_DB: bank_db
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./BaseDatos.sql:/docker-entrypoint-initdb.d/init.sql
    networks:
      - nttdata-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5

  # =====================================================
  # pgAdmin (Opcional)
  # =====================================================
  pgadmin:
    image: dpage/pgadmin4:latest
    container_name: nttdata-pgadmin
    environment:
      PGADMIN_DEFAULT_EMAIL: [TU_EMAIL]
      PGADMIN_DEFAULT_PASSWORD: [TU_PASSWORD]
    ports:
      - "5050:80"
    networks:
      - nttdata-network
    volumes:
      - ./docker/pgadmin/servers.json:/pgadmin4/servers.json
    depends_on:
      - postgres

  # =====================================================
  # Zookeeper
  # =====================================================
  zookeeper:
    image: confluentinc/cp-zookeeper:7.5.0
    container_name: nttdata-zookeeper
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181
      ZOOKEEPER_TICK_TIME: 2000
    ports:
      - "2181:2181"
    networks:
      - nttdata-network
    healthcheck:
      test: ["CMD", "nc", "-z", "localhost", "2181"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 60s

  # =====================================================
  # Kafka
  # =====================================================
  kafka:
    image: confluentinc/cp-kafka:7.5.0
    container_name: nttdata-kafka
    depends_on:
      zookeeper:
        condition: service_healthy
    ports:
      - "9092:9092"
    environment:
      KAFKA_BROKER_ID: 1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: PLAINTEXT:PLAINTEXT
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://kafka:9092
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_TRANSACTION_STATE_LOG_MIN_ISR: 1
      KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR: 1
      KAFKA_AUTO_CREATE_TOPICS_ENABLE: "true"
    networks:
      - nttdata-network
    healthcheck:
      test: ["CMD", "kafka-broker-api-versions", "--bootstrap-server", "localhost:9092"]
      interval: 10s
      timeout: 10s
      retries: 5
      start_period: 60s

  # =====================================================
  # Kafka UI
  # =====================================================
  kafka-ui:
    image: provectuslabs/kafka-ui:latest
    container_name: nttdata-kafka-ui
    depends_on:
      - kafka
    ports:
      - "8090:8080"
    environment:
      KAFKA_CLUSTERS_0_NAME: nttdata-cluster
      KAFKA_CLUSTERS_0_BOOTSTRAPSERVERS: kafka:9092
      KAFKA_CLUSTERS_0_ZOOKEEPER: zookeeper:2181
    networks:
      - nttdata-network

  # =====================================================
  # Client Service
  # =====================================================
  client-service:
    build:
      context: .
      dockerfile: client-service/Dockerfile
    container_name: nttdata-client-service
    depends_on:
      postgres:
        condition: service_healthy
      kafka:
        condition: service_healthy
    ports:
      - "8081:8081"
    environment:
      SPRING_PROFILES_ACTIVE: docker
      SPRING_DATASOURCE_URL: jdbc:postgresql://postgres:5432/bank_db
      SPRING_KAFKA_BOOTSTRAP_SERVERS: kafka:9092
    networks:
      - nttdata-network
    volumes:
      - ./logs/client-service:/app/logs
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:8081/api/clients"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 90s

  # =====================================================
  # Account Service
  # =====================================================
  account-service:
    build:
      context: .
      dockerfile: account-service/Dockerfile
    container_name: nttdata-account-service
    depends_on:
      postgres:
        condition: service_healthy
      kafka:
        condition: service_healthy
    ports:
      - "8082:8082"
    environment:
      SPRING_PROFILES_ACTIVE: docker
      SPRING_DATASOURCE_URL: jdbc:postgresql://postgres:5432/bank_db
      SPRING_KAFKA_BOOTSTRAP_SERVERS: kafka:9092
    networks:
      - nttdata-network
    volumes:
      - ./logs/account-service:/app/logs
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:8082/api/accounts"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 90s

  # =====================================================
  # Bank Management Composite Service
  # =====================================================
  bank-mgnt-composite:
    build:
      context: .
      dockerfile: bank-mgnt-composite/Dockerfile
    container_name: nttdata-bank-mgnt-composite
    depends_on:
      client-service:
        condition: service_healthy
      account-service:
        condition: service_healthy
    ports:
      - "8083:8083"
    environment:
      SPRING_PROFILES_ACTIVE: docker
      SERVICES_CLIENT_SERVICE_URL: http://client-service:8081
      SERVICES_ACCOUNT_SERVICE_URL: http://account-service:8082
    networks:
      - nttdata-network
    volumes:
      - ./logs/bank-mgnt-composite:/app/logs
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:8083/api/graphiql"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 90s

networks:
  nttdata-network:
    driver: bridge

volumes:
  postgres_data:
    driver: local
